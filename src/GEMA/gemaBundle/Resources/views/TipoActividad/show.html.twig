    {% extends 'gemaBundle::layout.html.twig' %}

    {% block gema_page -%}
    <h3>Tipo de Actividad</h3>

    <div class="table-responsive">
        <table class="record_properties table table-hover">
            <thead>
                <tr>
                    <th>Tipo</th>                        
                    <th colspan="2">Acciones</th>
                </tr>
            </thead>
            <tbody>
                <tr>                                        
                    <td>{{ entity.tipo }}</td>
                    <td><a href="{{ path('tipoactividad_edit', { 'id': entity.id }) }}"><i class="fa fa-edit"></i> Editar</a></td>
                    <td><a href="{{ path('tipoactividad_delete', { 'id': entity.id }) }}"><i class="fa fa-minus-circle"></i> Eliminar</a></td>

                </tr>
            </tbody>
        </table>
    </div>


    <ul class="pager">
        <li class="next"><a href="{{path('tipoactividad')}}"><i class="fa fa-list"></i>
                Listado de Tipos de Actividades
            </a>
        </li>
    </ul>


    {% endblock %}
