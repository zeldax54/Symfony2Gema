{% extends 'gemaBundle::layout.html.twig' %}
{% block gema_navbar_seguridad %}active{% endblock %}
{% block gema_breadcrumb %}
    <li><a href="#">Seguridad</a></li>
    <li><a href="{{path('persona')}}">Personas</a></li>
    <li class="active">{{ entity.nombre }} {{ entity.apellidos }}</li>
    {% endblock %}
    {% block gema_page -%}
    <div class="page-header">
        <h2>{{ entity.nombre }} {{ entity.apellidos }}</h2>
    </div>
    {% for flashMessage in app.session.flashbag.get('notice') %} 
        <div class="alert alert-success alert-dismissable auto-dismiss animated fadeIn m-b-5 m-t-10">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <strong>;)</strong> {{ flashMessage }}
        </div>
    {% endfor %}
    {% for flashMessage in app.session.flashbag.get('error') %} 
        <div class="alert alert-danger alert-dismissable auto-dismiss animated fadeIn m-b-5 m-t-10">
            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
            <strong>;)</strong> {{ flashMessage }}
        </div>
    {% endfor %}
    <div class="row m-t-15">
        <div class="col-xs-12 col-md-5">
            <section class="gemaCard">
                <header>Datos Específicos</header>
                <div class="cardBody">
                    <div class="cardIcon">
                        <i class="fa fa-street-view"></i>
                    </div>
                    <div class="gema-block gema-show">
                        <ul>
                            <li><strong class="m-r-10">CI: </strong>{{ entity.cIdentidad }}</li>
                            <li><strong class="m-r-10">Sexo: </strong>{{ entity.sexo }}</li>
                            <li>
                                <strong class="m-r-10">Dirección: </strong>{{ entity.direccion }}
                            </li>
                            <li><strong class="m-r-10">Profesi&oacute;n: </strong>{{ entity.profesion }}</li>
                            <li><strong class="m-r-10">Cargo: </strong>{{ entity.cargo }}</li>
                            <li><strong class="m-r-10">Salario: $</strong> {{ entity.salario }}</li>

                        </ul>
                    </div>
                </div>
                <footer class=""></footer>
            </section>
        </div>
        <div class="col-xs-12 col-md-4">
            <section class="gemaCard">
                <header>Gasto en Salario</header>
                <div class="cardBody">
                    <div class="cardIcon">
                        <i class="fa fa-money"></i>
                    </div>
                    <div class="gema-block gema-show">
                        <h2></h2>
                        <ul>
                            <li><strong class="m-r-10">Por día :</strong> ${{ entity.gastoDia | number_format(2) }}</li>
                            <li><strong class="m-r-10">Por hora :</strong> ${{ entity.gastoHora | number_format(2)}}</li>
                            <li><strong class="m-r-10">Por minuto :</strong> ${{ entity.gastoMinuto | number_format(2)}}</li>

                        </ul>
                    </div>
                </div>
                <footer class=""></footer>
            </section>
        </div>
        <div class="col-xs-12 col-md-3">
            <section class="gemaCard">
                <header>Control de Acceso</header>
                <div class="cardBody">
                    <div class="cardIcon">
                        <i class="zmdi zmdi-shield-security"></i>
                    </div>
                    <div class="gema-block gema-show">
                        {% if entity.usuario == null %}
                            No hay usuario asignado a esta persona.
                        {%else%}
                            <ul>
                                <li><i class="zmdi zmdi-account"></i>{{ entity.usuario }}<strong></strong></li>
                                <li><i class="fa fa-users"></i>{{ entity.usuario.roles[0] }} <strong></strong></li>
                            </ul>
                        {% endif %}
                    </div>
                </div>
                <footer class="">
                </footer>
            </section>
        </div>
    </div>   


    <ul class="pager">
        <li class="next"><a href="{{ path('persona_delete', { 'id': entity.id }) }}"><i class="fa fa-minus-circle"></i> Eliminar</a></li>
        <li class="next"><a href="{{ path('persona_edit', { 'id': entity.id }) }}" class="m-r-10"><i class="fa fa-edit"></i> Editar</a></li>
        <li class="next"><a href="{{ path('persona_new') }}" class="m-r-10 btn-new"><i class="fa fa-plus-circle"></i> Nuevo Registro</a></li>
        <li class="next"><a href="{{path('persona')}}" class="m-r-10"><i class="fa fa-list"></i>
                Listado de Personas
            </a>
        </li>     
    </ul>


{% endblock %}
