    {% extends 'gemaBundle::layout.html.twig' %}

    {% block gema_page -%}
    <h2>Accion</h2>

    <div class="table-responsive">
        <table class="record_properties table table-hover">
            <thead>
                <tr>                                                                <th>Nombre</th>
                                                                    <th>Tiempo</th>
                                                                    <th>Procedimiento</th>
                        
                    <th colspan="3">Acciones</th>
                </tr>
            </thead>
            <tbody>
                <tr>                                        
                        <td>{{ entity.nombre }}</td>
                                        
                        <td>{{ entity.tiempo }}</td>
                                        
                        <td>{{ entity.procedimiento }}</td>
                    
    <td><a href="{{ path('accion_show', { 'id': entity.id }) }}"><i class="fa fa-eye"></i> Mostrar</a></td>
    <td><a href="{{ path('accion_edit', { 'id': entity.id }) }}"><i class="fa fa-edit"></i> Editar</a></td>
    <td><a href="{{ path('accion_delete', { 'id': entity.id }) }}"><i class="fa fa-minus-circle"></i> Eliminar</a></td>

                </tr>
            </tbody>
        </table>
    </div>


    <ul class="pager">
        <li class="next"><a href="{{path('accion')}}"><i class="fa fa-list"></i>
                Listado de Accion
            </a>
        </li>
    </ul>


    {% endblock %}
