{% extends 'gemaBundle::layout.html.twig' %}
{% block gema_navbar_seguridad %}active{% endblock %}
{% block gema_breadcrumb %}
    <li><a href="#">Seguridad</a></li>
    <li class="active">Roles</li>
    {% endblock %}
    {% block gema_page -%}
    <div class="page-header">
        <h2>Listado de Roles</h2>
    </div>
    {% if entities is empty %}
        <div class="bs-callout bs-callout-info">
            <i class="fa fa-info-circle img-responsive info_icon"></i>
            <h4>Aviso</h4>
            <p>No existen roles definidos en la base de datos.</p>
        </div>
        <ul class="pager">
            <li class="next">
                <a href="{{ path('rol_new') }}" class="btn-new">
                    <i class="fa fa-plus-circle"></i>
                    Nuevo Rol
                </a></li>
        </ul>
    {% else %}
        {% for flashMessage in app.session.flashbag.get('notice') %} 
            <div class="alert alert-success alert-dismissable animated fadeIn">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">×</button>
                <strong>;)</strong> {{ flashMessage }}
            </div>
        {% endfor %}
        <div class="table-responsive">
            <table class="record_properties table table-hover table table-striped table-vmiddle" id="data-table-command" data-ajax="true" data-url="{{ path('rol') }}" >
                <thead>
                    <tr>  
                        <th data-column-id="nombre" data-formatter="usuarios">Nombre</th>  
                        <th data-column-id="descripcion" data-formatter="roles">Descripción</th>                                                                        
                        <th colspan="3" data-formatter="commands">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>

        </div>
    {%endif%} 
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $("#data-table-command").bootgrid({
            css: {
                icon: 'md icon',
                iconColumns: 'md-view-module',
                iconDown: 'md-expand-more',
                iconRefresh: 'md-refresh',
                iconUp: 'md-expand-less'
            },
            formatters: {
                "commands": function (column, row) {
                    return "<a href='" + Routing.generate('rol_edit', {id: row.id}) + "'  class=\"btn btn-icon command-edit\" ><span class=\"md md-edit\"></span></a> " +
                            "<a href='" + Routing.generate('rol_delete', {id: row.id}) + "'  class=\"btn btn-icon command-delete\" ><span class=\"md md-delete\"></span></a>";
                },
                "nombre": function (column, row) {
                    return "<a href='" + Routing.generate('rol_show', {id: row.id}) + "' >" + row.nombre + "</a> ";
                }
            }, templates: {
                header: "<div id=\"\{\{ctx.id\}\}\" class=\"\{\{css.header\}\}\"><div class=\"row\"><div class=\"col-sm-12 col-md-9 actionBar\"><p class=\"\{\{css.search\}\}\"></p><p class=\"\{\{css.actions\}\}\"></p></div><div class=\"col-sm-12 col-md-3 actionBar\"><a href=\"{{ path('rol_new') }}\"><i class=\"fa fa-plus-circle\"></i>Nuevo Rol</a></div></div></div>",
                loading: "<tr><td colspan='3' class=\"loading\"><div class='loading'><img src='{{ asset('bundles/gema/images/loading.gif') }}' class='img-responsive'></div></td></tr>"
            }
        });
    </script>
{% endblock  %}